<select id="VH0201G0R0" parameterType="Map" resultType="Map">
	SELECT
		DATE_FORMAT(UPD_DTM, '%Y-%m-%d %H:%i:%s') UPD_DTM 
		,CRS_ID
		,CRS_NM
		,CRS_ENM
		,GPS_X
		,GPS_Y
		,CRS_KIND
		,SIG_CTR_TYPE
		,MAIN_PHASE
		,PHASE_CNT
		,PERIOD_LEN
		,PERIOD_CNT
		,DATE_FORMAT(APPL_ST_DT, '%Y-%m-%d') APPL_ST_DT 
		,DATE_FORMAT(APPL_ED_DT, '%Y-%m-%d') APPL_ED_DT 
		,HIS_DIV
		,REMARK
		,USE_YN
		,DEL_YN
		,UPD_ID
	FROM
		BMS_CRS_HIS
	<where>
		<if test="@kr.tracom.util.CommonUtil@notEmpty(HIS_DIV)">
				HIS_DIV = #{HIS_DIV}
		</if>
		<if test="@kr.tracom.util.CommonUtil@notEmpty(HIS_DIV)">
				AND CRS_KIND = #{CRS_KIND}
		</if>
		<if test="@kr.tracom.util.CommonUtil@notEmpty(CONTENT)">
				AND (CRS_ID LIKE CONCAT('%',#{CONTENT},'%') || CRS_NM LIKE CONCAT('%',#{CONTENT},'%'))
		</if>
		<if test="@kr.tracom.util.CommonUtil@notEmpty(F_DATE_VH0201) and @kr.tracom.util.CommonUtil@empty(L_DATE_VH0201)">
			<![CDATA[AND DATE_FORMAT(UPD_DTM, '%Y%m%d') >= #{F_DATE_VH0201}]]>
		</if>
		<if test="@kr.tracom.util.CommonUtil@notEmpty(L_DATE_VH0201) and @kr.tracom.util.CommonUtil@empty(F_DATE_VH0201)">
			<![CDATA[AND DATE_FORMAT(UPD_DTM, '%Y%m%d') <= #{L_DATE_VH0201}]]>
		</if>
		<if test="@kr.tracom.util.CommonUtil@notEmpty(F_DATE_VH0201) and @kr.tracom.util.CommonUtil@notEmpty(L_DATE_VH0201)">
			AND DATE_FORMAT(UPD_DTM, '%Y%m%d') BETWEEN #{F_DATE_VH0201} AND #{L_DATE_VH0201}
		</if>			
	</where>
	ORDER BY
		UPD_DTM DESC, CRS_ID DESC
</select>

