		var btnOptions = 
		[
			{userStr:"조회", auth: gcm.BTN.SEARCH, cbFnc: scwin.btn_search_onclick}
		];
		com.setMainBtn3(wfm_mainBtn, btnOptions);

		var codeOptions = [ {code : "FCLT_KIND", compID : "FM0101P0:FCLT_KIND" }
							,{code : "PARAM_DIV", compID : "FM0101P0:PARAM_DIV" }
							,{code : "PARAM_KIND", compID : "FM0101P0:PARAM_KIND" }
							,{code : "DATA_TYPE", compID : "FM0101P0:DATA_TYPE" }
						];

		com.setCommonDtl(codeOptions, function() {
			com.executeSubmission(sub_FM0101P0R0);
		});	
		
	};
					
	scwin.btn_search_onclick = function() {
		com.executeSubmission(sub_FM0101P0R0);
	};
		
	scwin.btn_confirm_onclick = function() {
		var data = FM0101P0.getCheckedJSON( "chk" );
		com.closePopup(scwin.closeCallbackFncName, data);
	};
		
	scwin.btn_cancel_onclick = function() {
		com.closePopup();
	};
	
	scwin.FM0101P0_onrowindexchange = function(row,oldRow) {
		FM0101P0.setCellChecked(row,"chk",true);
	}
	
	scwin.sub_FM0101P0R0_submitdone = function(e) {
		var sCode = com.getResultCode(e);
		if (sCode == gcm.MESSAGE_CODE.STATUS_SUCCESS) {
			
			/*//파라미터 종류로 제외(ID필요?)
			var ids = dma_search.get("PARAM_ECPT_IDS");
			//com.excludeItemsByGrid(FM0101P0, ids, "PARAM_KIND");*/
		}
		com.setFocusedCell(FM0101P0, "FCLT_KIND");
		
	};
	
	scwin.sbx_ChoiceBox_onviewchange = function(info) {
		if (info.newValue == "ALL") {
			autoChoiceBox.hide();
			search_input.setValue("");
			search_input.show("");
		} else if (info.newValue == "FCLT_KIND") {
			search_input.hide();
			autoChoiceBox.setNodeSet("data:dlt_searchitem", "FCLT_KIND", "FCLT_KIND");
			//검색부분 코드값 변경
			var codeOptions = [ {code : "FCLT_KIND", compID : "autoChoiceBox" } ];
			com.setCommonDtl(codeOptions);
			autoChoiceBox.show("");
		} else if (info.newValue == "PARAM_DIV") {
			search_input.hide();
			autoChoiceBox.setNodeSet("data:dlt_searchitem", "PARAM_DIV", "PARAM_DIV");
			//검색부분 코드값 변경
			var codeOptions = [ {code : "PARAM_DIV", compID : "autoChoiceBox" } ];
			com.setCommonDtl(codeOptions);
			autoChoiceBox.show("");
		}
	};
	
	scwin.useYnDisFormatter = function(data){
		if(data == ""){
			return "";
		}else if(data == 'Y'){
			return "사용";
		}else if(data == 'N'){
			return "사용안함";
		}
	}
	
	
	scwin.autoYnDisFormatter = function(data){
