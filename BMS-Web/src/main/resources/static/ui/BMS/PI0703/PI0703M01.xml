		if (count > 0 ) {
			for(i = 0; i<count; i++) {
				dlt_BMS_DESTI_RSV_RST_INFO.setCellData(rows[i], "RSV_DT", obj.data[i].RSV_DT);
			}
		}
		//com.saveGrid(PI0703G0, sub_PI0703G0S0);
	}
	
