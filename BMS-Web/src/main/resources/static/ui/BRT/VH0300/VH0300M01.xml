	scwin.sub_VH0300G0R0_submitdone = function(e) {
		com.setFocusedCell(VH0300G0, "OCR_DTM");	
		
		var locStopDiv = "";
		
		for (i=0; i < dlt_BRT_ACRT_LOC_STOP_LOG.getDataLength(); i++) {
