			switch(locStopDiv) {
				//정위치정차	
				case "LS001":
				VH0300G0.setCellClass(i, "LOC_STOP_DIV", "color_div3");
				break;
				
				//정위치정차위반
				case "LS002":
				VH0300G0.setCellClass(i, "LOC_STOP_DIV", "color_div2");
				break;
			}
		}	
	};
	
